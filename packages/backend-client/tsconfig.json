{
  "include": ["dist/ts/**/*.ts"],

  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["es2015", "dom"],
    "outDir": "dist/js",
    // Key flags for generating .d.ts files:
    "declaration": true,
    "declarationMap": false
  }
}
